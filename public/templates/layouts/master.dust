        <script>
            $(function () {
                var adds = $('.adsbygoogle'),
                    i = 0,
                    renderAdds = function render() {
                        if (adds.length) {
                            adds.each(function () {
                                if ($(this).is(':visible') && !$(this).children().length) {
                                    (adsbygoogle = window.adsbygoogle || []).push({});
                                } else if (!$(this).is(':visible')) {
                                    $(this).remove();
                                }
                            });
                        }
                    };
                renderAdds();
                $(window).on('resize', function () {
                    renderAdds();
                });
            });
